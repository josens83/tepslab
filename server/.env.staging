# Staging Server Configuration
NODE_ENV=staging
PORT=5000
CLIENT_URL=https://staging.tepslab.com

# Database
MONGODB_URI=mongodb://tepslab-mongodb:27017/tepslab_staging
REDIS_URL=redis://tepslab-redis:6379

# JWT
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Kakao OAuth (use test app)
KAKAO_CLIENT_ID=${KAKAO_CLIENT_ID_STAGING}
KAKAO_CLIENT_SECRET=${KAKAO_CLIENT_SECRET_STAGING}
KAKAO_REDIRECT_URI=https://api-staging.tepslab.com/api/auth/kakao/callback

# Naver OAuth (use test app)
NAVER_CLIENT_ID=${NAVER_CLIENT_ID_STAGING}
NAVER_CLIENT_SECRET=${NAVER_CLIENT_SECRET_STAGING}
NAVER_REDIRECT_URI=https://api-staging.tepslab.com/api/auth/naver/callback

# TossPayments (use test keys)
TOSS_SECRET_KEY=${TOSS_SECRET_KEY_STAGING}
TOSS_CLIENT_KEY=${TOSS_CLIENT_KEY_STAGING}
TOSS_API_URL=https://api.tosspayments.com/v1

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=${SMTP_USER}
SMTP_PASSWORD=${SMTP_PASSWORD}
EMAIL_FROM=TEPS Lab Staging <staging@tepslab.com>

# CORS
CORS_ORIGIN=https://staging.tepslab.com

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
AUTH_RATE_LIMIT_MAX=10

# File Upload
MAX_FILE_SIZE=52428800
UPLOAD_DIR=/app/uploads

# Monitoring
SENTRY_DSN=${SENTRY_DSN}
SENTRY_ENVIRONMENT=staging
SENTRY_TRACES_SAMPLE_RATE=1.0

# Analytics (use staging property)
GA_MEASUREMENT_ID=${GA_MEASUREMENT_ID_STAGING}
