# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://localhost:5173

# =====================================================
# SUPABASE (Required)
# =====================================================
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Prisma Database URL (Supabase PostgreSQL)
# Format: postgresql://postgres.[project-ref]:[password]@aws-0-ap-northeast-2.pooler.supabase.com:6543/postgres?pgbouncer=true
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-ap-northeast-2.pooler.supabase.com:6543/postgres?pgbouncer=true
# Direct connection for migrations
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-ap-northeast-2.pooler.supabase.com:5432/postgres

# =====================================================
# LEGACY (MongoDB - Will be removed after migration)
# =====================================================
MONGODB_URI=mongodb://localhost:27017/tepslab

# JWT (Now handled by Supabase Auth, but keep for backward compatibility)
JWT_SECRET=your-secret-key-change-this-in-production-min-32-characters-recommended
JWT_REFRESH_SECRET=your-refresh-secret-key-change-this-in-production-min-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# =====================================================
# OAuth (Configure in Supabase Dashboard → Authentication → Providers)
# =====================================================
# Kakao OAuth
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Naver OAuth
NAVER_CLIENT_ID=your-naver-client-id
NAVER_CLIENT_SECRET=your-naver-client-secret

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =====================================================
# Payments
# =====================================================
TOSS_SECRET_KEY=your-toss-secret-key
TOSS_CLIENT_KEY=your-toss-client-key
TOSS_API_URL=https://api.tosspayments.com/v1

# =====================================================
# Email (SMTP) - Can also use Supabase Edge Functions
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=TEPS Lab <noreply@tepslab.com>

# =====================================================
# Security & Performance
# =====================================================
CORS_ORIGIN=http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_MAX=10
ENCRYPTION_KEY=your-encryption-key-base64-min-32-bytes-required

# File Upload (Can use Supabase Storage instead)
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads

# =====================================================
# External Services
# =====================================================
# OpenAI API (AI Tutor)
OPENAI_API_KEY=your-openai-api-key-here

# Monitoring
SENTRY_DSN=your-sentry-dsn-here

# Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
